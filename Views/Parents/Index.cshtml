@model IEnumerable<SchoolManagementSystem.Models.UserSubject>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="float-start">
    <h3>
        @ViewBag.Heading
    </h3>
</div>
<div class="float-end">
    <a asp-controller="MeetingRequests" asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-calendar-check"></i> Resquest a meeting</a>
</div>
<div class="clearfix"></div>
<table class="table mt-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attended)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LearnerProfile)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject.Title)
            </td>
            <td>
                @if (item.Attended)
                {
                    <i class="fa-solid fa-check text-success"></i>
                }
                else
                {
                    <i class="fa-solid fa-xmark text-danger"></i>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LearnerProfile)
            </td>
        </tr>
}
    </tbody>
</table>
